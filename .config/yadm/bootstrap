#!/bin/bash

set -eu

BOOTSTRAP_D="$0.d"

if [[ ! -d "$BOOTSTRAP_D" ]]; then
    err "Error: bootstrap directory '$BOOTSTRAP_D' not found" >&2
    exit 1
fi

: ${PNPM_HOME:=$HOME/.local/share/pnpm}
PATH="$PNPM_HOME:$PATH"
source $BOOTSTRAP_D/base/install-zx.sh

PATH="$HOME/.cargo/bin:$PATH"

$BOOTSTRAP_D/index.mjs
